<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diet Plan</title>
    <link rel="stylesheet" type="text/css" href="/style.css?<%=Time.now.to_i%>">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Lägg till Chart.js -->
</head>
<body>
  <aside class="sidebar">
    <div class="logo">Logo</div>
    <nav>
      <ul class="nav">
        <li><a href="/training">Training</a></li>
        <li><a href="/diet">Diet</a></li>
        <li><a href="/new">Create your program</a></li>
        <li><a href="/edit">Edit your program</a></li>
        <li><a href="/logout">Log out</a></li>
      </ul>
    </nav>
  </aside>

  <div class="container">
    <main class="main">
      <!-- Viktloggningssektion -->
      <section class="box box-1">
        <h2>Log Your Weight</h2>
        <form action="/log_weight" method="POST">
          <label for="weight">
            Weight (kg):
            <input type="number" step="0.1" name="weight" id="weight" required>
          </label>
          <label for="date">
            Date:
            <input type="date" name="date" id="date" required>
          </label>
          <button type="submit">Log Weight</button>
        </form>
        <h2>Weight Progress</h2>
        <canvas id="weightChart"></canvas>
      </section>


        <div class="week-container">
          <% @days.each do |day| %>
            <div class="day">
              <p><strong><%= day[:day] %></strong></p>
              <% if day[:meal] %>
                <p><%= day[:meal] %></p>
              <% else %>
                <p>No meal planned</p>
              <% end %>
            </div>
          <% end %>
        </div>

    </main>
  </div>

  <script>
    // Hämta viktdata från servern
    fetch('/weight_data')
      .then(response => response.json())
      .then(data => {
        const ctx = document.getElementById('weightChart').getContext('2d');
        new Chart(ctx, {
          type: 'line',
          data: {
            labels: data.dates,
            datasets: [{
              label: 'Weight (kg)',
              data: data.weights,
              borderColor: 'rgba(75, 192, 192, 1)',
              borderWidth: 2,
              fill: false
            }]
          },
          options: {
            scales: {
              x: {
                title: {
                  display: true,
                  text: 'Date'
                }
              },
              y: {
                title: {
                  display: true,
                  text: 'Weight (kg)'
                }
              }
            }
          }
        });
      });
  </script>
</body>
</html>